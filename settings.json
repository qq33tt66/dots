{
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "editor.glyphMargin": false,
  "editor.folding": false,
  "window.restoreWindows": "all",
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "400",
  "editor.padding.top": 24,
  "editor.padding.bottom": 24,
  "editor.lineNumbers": "on",
  "scm.diffDecorations": "none",
  "workbench.settings.applyToAllProfiles": [],
  "explorer.autoReveal": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "explorer.compactFolders": false,
  "workbench.layoutControl.enabled": false,
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "editor.cursorBlinking": "smooth",
  "editor.guides.indentation": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.guides.bracketPairs": false,
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "line",
  // "editor.cursorSmoothCaretAnimation": "on",
  // "editor.smoothScrolling": true,
  "editor.cursorWidth": 2,
  // "workbench.list.smoothScrolling": true,
  // "terminal.integrated.smoothScrolling": true,
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "window.commandCenter": false,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<Esc>"
      ],
      "when": [
        "editorFocus"
      ],
      "commands": [
        ":nohl"
      ], // Clears highlight of current search
      "silent": true
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  // To improve performance
  "vim.incsearch": true,
  "vim.searchHighlightColor": "#f6ff0080",
  "vim.searchHighlightTextColor": "#fff",
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.textColor": "#202020",
  "vim.highlightedyank.duration": 150,
  "vim.smartRelativeLine": true,
  "vim.surround": true,
  "vim.easymotion": true, // Search with "\\
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<Esc>"
      ]
    },
  ],
  "files.autoSave": "afterDelay",
  "editor.fontFamily": "CaskaydiaCove Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.formatOnPaste": true,
  "explorer.confirmDelete": false,
  "editor.wordWrap": "on",
  "editor.stickyScroll.enabled": false,
  "github.copilot.nextEditSuggestions.enabled": true,
  "svelte.enable-ts-plugin": true,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "workbench.activityBar.location": "hidden",
  "editor.formatOnSave": true,
  "workbench.editor.showTabs": "multiple",
  "window.density.editorTabHeight": "compact",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "workbench.iconTheme": "material-icon-theme",
  "security.workspace.trust.untrustedFiles": "open",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed"
  ],
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  // "git.openRepositoryInParentFolders": "never",
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDragAndDrop": false,
  "chat.editing.confirmEditRequestRemoval": false,
  "workbench.colorTheme": "GitHub Dark",
}
// remove these keybindings selectNextSuggestion,selectPrevSuggestion
